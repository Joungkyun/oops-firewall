CC	= @CC@
CFLAGS	=
DESTDIR	=

PROG	= oops-firewall
langdir	= @SHAREDDIR@/locale

INSTALL	= @INSTALL@
LS	= @LS@
RM	= @RM@ -f
SED	= @SED@
MKDIR	= @MKDIR@ -p
MSGFMT	= @MSGFMT@

all:
	for i in `$(LS) *.po | $(SED) 's/\.po//'` ; do \
		$(MSGFMT) $$i.po -o $$i.mo ; \
	done

install:
	for i in `$(LS) *.po | $(SED) 's/\.po//'` ; do \
		$(MKDIR) $(DESTDIR)$(langdir)/$$i/LC_MESSAGES/ ; \
		$(INSTALL) -m644 $$i.mo $(DESTDIR)$(langdir)/$$i/LC_MESSAGES/$(PROG).mo ; \
	done

clean:
	-$(RM) *.mo
